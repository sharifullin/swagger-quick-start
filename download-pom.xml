<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.7.RELEASE</version>
        <relativePath/>
    </parent>

    <groupId>sharifullin</groupId>
    <artifactId>swagger</artifactId>
    <version>1.0-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>io.swagger.codegen.v3</groupId>
            <artifactId>swagger-codegen-maven-plugin</artifactId>
            <version>3.0.11</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>12</source>
                    <target>12</target>
                </configuration>
            </plugin>

            <!--
            https://github.com/swagger-api/swaggerhub-maven-plugin/
            -->
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swaggerhub-maven-plugin</artifactId>
                <version>1.0.7</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>download</goal>
                        </goals>
                        <configuration>
                            <api>model2</api>
                            <owner>smkcloud</owner>
                            <version>1.0.0</version>
                            <format>json</format>
                            <outputFile>${project.basedir}/src/main/resources/api.json</outputFile>
                            <token>eyJUb2tlblR5cGUiOiJBUEkiLCJzYWx0IjoiYzkzMWFjNWItZTI3MS00MmEzLWFkYzItYzQzZmZhNDQwN2I1IiwiYWxnIjoiSFM1MTIifQ.eyJqdGkiOiIxZTA4ZmI0Mi1lMDAzLTQzYWEtOTg1MS0yNzc4ZDYwOGYxNjgiLCJpYXQiOjE1MzM4MzQ4MTF9.myykQaa1cxAvvoqieFWraT3uogx9ZxFfYp6nPHwgonWNu4xBbc2hVuuB4k-rd6xJMRsALvMzW3JBfCUWX-WvSg</token>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/api.json</inputSpec>
                            <language>spring</language>
                            <modelPackage>model</modelPackage>
                            <apiPackage>api</apiPackage>
                            <output>${project.basedir}/swagger</output>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>